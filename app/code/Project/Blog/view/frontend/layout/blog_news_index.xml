<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Project_Blog:css/news.css" />
    </head>
    <body>
        <referenceContainer name="content">
            <block name="Project_Blog_Post" template="Project_Blog::post.phtml" as="post">
                <arguments>
                    <argument name="posts_view_model" xsi:type="object">Project\Blog\ViewModel\Posts</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>